<view class="detail_swiper">
    <image class="image"  bindtap="handlePrevewImage"
    mode="aspectFit" src="{{goodsObj.pic}}"/>
</view>

<view class="container">
    <view class="edit-container">
                        <view class="a-item">
                <view class="input-wrap">
                    编号 | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.id}}
                </view>
            </view>
            <view class="a-item">
                <view class="input-wrap">
                    书名 | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.title}}                 
                </view>
            </view>
             <view class="a-item">
                <view class="input-wrap">
                    作者 | 
                </view>
                <view class="input-wrap2">
                   {{goodsObj.author}}                 
                </view>
            </view>    
            <view class="a-item">
                <view class="input-wrap">
                    出版社 | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.publisher}}                  
                </view>
            </view>          
            <view class="a-item">
                <view class="input-wrap">
                    进价 | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.pricein}}                
                </view>
            </view>          
            <view class="a-item">
                <view class="input-wrap">
                    售价 | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.priceout}}               
                </view>
            </view>           
            <view class="a-item">
                <view class="input-wrap">
                    库存 | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.stock}}                   
                </view>
            </view>    
            <view class="a-item">
                <view class="input-wrap">
                    ISBN | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.isbn}}                  
                </view>
            </view>    
            <view class="a-item">
                <view class="input-wrap">
                    类别 | 
                </view>
                <view class="input-wrap2"wx:if="{{goodsObj.cate==1}}">
                    小说
                </view>
                <view class="input-wrap2"wx:if="{{goodsObj.cate==2}}">
                    散文
                </view>
                <view class="input-wrap2"wx:if="{{goodsObj.cate==3}}">
                    诗歌
                </view>
                <view class="input-wrap2"wx:if="{{goodsObj.cate==4}}">
                    说明文
                </view>
                <view class="input-wrap2"wx:if="{{goodsObj.cate==5}}">
                    悬疑
                </view>
            </view>
            <view class="b-item">
                <view class="input-wrap">
                    简介 | 
                </view>
                <view class="input-wrap2">
                    {{goodsObj.summary}}                 
                </view>
            </view>           
    </view>
    <view class="btn-wrap">
            <view class="btn1" bindtap="edit">
            编辑信息
            </view>
            </view>
    <view class="btn-wrap">
        <view class="btn2" bindtap="delete">
        删除类别
        </view>
    </view>
</view>

