/* pages/customer/customerdetail.wxss */
page {
  min-height: 100%;
  background-color: #f8f8f8;
}
.container {
  min-height: 100%;
  /* align-items: stretch; */
  background: #f8f8f8;
  overflow-x: hidden;
  padding: 30rpx;
}
.container .edit-container {
  background: #fff;
  width: 100%;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 2rpx 8rpx 18rpx #f1f1f1;
}
.container .edit-container .title {
  padding-left: 30rpx;
  height: 6vh;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f1f1f1;
}
.container .edit-container .time {
  padding-left: 30rpx;
  height: 8vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
}
.container .edit-container .food-container {
  display: flex;
  flex-direction: column;
}
.container .edit-container .food-container .fooditem-container {
  display: flex;
  flex-direction: row;
}
.container .edit-container .food-container .fooditem-container .name {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}
.container .edit-container .food-container .fooditem-container .material-box {
  display: flex;
  flex-direction: column;
  flex: 1;
  border-right: 1px solid #f1f1f1;
}
.container .edit-container .food-container .fooditem-container .material-box .material {
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f1f1f1;
}
.container .edit-container .food-container .fooditem-container .num-box {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.container .edit-container .food-container .fooditem-container .num-box .num {
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f1f1f1;
}
